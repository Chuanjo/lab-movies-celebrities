<h2>Movies Edit</h2>

<div class="movie-edit" class="card" style="width: 58rem;">
<form method="POST" action="/movies/{{oneMovie._id}}/edit" >

    <label for="title">Title</label>
    <input type="text" name="title" value="{{oneMovie.title}}">

<br>

    <label for="genre">Genre</label>
    <input type="text" name="genre" value="{{oneMovie.genre}}">

<br>

    <label for="plot">Plot</label class="card" style="width: 28rem;">
    <input type="text" name="plot" value="{{oneMovie.plot}}">

<br>

    <label for="cast">Cast</label>
    {{!-- <input type="text" name="cast" value="{{oneBook.cast}}"> --}}

    <select name="cast">

      {{#each allCelebrities}}
          <option value="{{this._id}}">{{this.name}}</option>
      {{/each}}

    </select>
</div>

<br>

    <button>Update</button>
    <a href="/movies">go to movies</a>

</form>